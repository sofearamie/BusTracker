<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tengchinsheng.bustracker.OnBus"
    android:onClick="onbusLayoutOnClick"
    android:background="#FF4C65"
    android:id="@+id/relativelayout6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="***"
        android:id="@+id/textView4"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:onClick="countdownOnClick"
        android:textColor="#FBE2B4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Arriving in ..."
        android:id="@+id/textView6"
        android:textSize="40sp"
        android:gravity="center"
        android:onClick="arrivingOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#FBE2B4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="minutes"
        android:id="@+id/textView7"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:onClick="minutesOnClick"
        android:textColor="#FBE2B4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="End Journey"
        android:id="@+id/button9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:textSize="40dp"
        android:onClick="offbusOnClick"
        android:background="#00C8F8" />

</RelativeLayout>
