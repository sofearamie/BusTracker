<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tengchinsheng.bustracker.FavouriteTrip"
    android:background="#FF4C65"
    android:id="@+id/relativelayout7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Favourite this trip?"
        android:id="@+id/textView9"
        android:textSize="40sp"
        android:gravity="center"
        android:layout_above="@+id/button10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="favOnClick"
        android:textColor="#FBE2B4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:text="YES"
        android:id="@+id/button10"
        android:textSize="40sp"
        android:onClick="yesOnClick"
        android:background="#00C8F8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
