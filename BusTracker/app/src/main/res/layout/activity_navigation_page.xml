<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tengchinsheng.bustracker.NavigationPage"
    android:background="#FF4C65"
    android:id="@+id/relativelayout3">

    <TextView
        android:text=".....(display bus stop that has been chosen)"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:onClick="displayOnClick"
        android:nestedScrollingEnabled="false"
        android:textColor="#FBE2B4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:text="@string/navigatenow"
        android:id="@+id/button3"
        android:textSize="40sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:onClick="returnOnClick"
        android:background="#00C8F8" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="SKIP"
        android:id="@+id/button4"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:onClick="previousPage"
        android:background="#FFC33C" />

</RelativeLayout>
